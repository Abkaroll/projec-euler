    "def collatz(x):\n",
    "    count = 1\n",
    "    while x > 1:\n",
    "        if x % 2 == 0:\n",
    "            x = x/2\n",
    "            count += 1\n",
    "        else:\n",
    "            x = 3*x + 1\n",
    "            count += 1\n",
    "        return count\n",
    "\n",
    "collatz(100000)"
   ]
